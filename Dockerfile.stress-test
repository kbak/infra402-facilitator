FROM --platform=$BUILDPLATFORM rust:trixie AS builder

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    pkg-config \
    libssl-dev \
 && rm -rf /var/lib/apt/lists/*

COPY . ./
RUN cargo build --package x402-stress-test --release --locked

# --- Stage 2 ---
FROM --platform=$BUILDPLATFORM debian:trixie-slim

RUN apt-get update && apt-get install -y --no-install-recommends ca-certificates && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY --from=builder /app/target/release/x402-stress-test /usr/local/bin/x402-stress-test
COPY crates/x402-stress-test/.env /app/.env

# Keep the machine alive for SSH access
CMD ["sleep", "infinity"]
